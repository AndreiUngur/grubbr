<?php
	require_once 'controller/Controller.php';
	session_start();
	$c = new Controller();
	try {
		$c->createMenuItem($_POST['newitem_name'],$_POST['newitem_price']);
		$_SESSION["errorItemName"] = "";
		$_SESSION["errorItemPrice"]= "";
	} catch (Exception $e) {
		$_SESSION["errorItemName"] = $e->getMessage();
		$_SESSION["errorItemPrice"] = $e->getMessage();
	}
?>