<?php
	require_once 'controller/Controller.php';
	session_start();
	$c = new Controller();
	try {
		$c->createMenuItem($_POST['newitem_name'],$_POST['newitem_price']);
		$_SESSION["errorItemName"] = "";
		$_SESSION["errorItemPrice"]= "";
	} catch (Exception $e) {
		$errors = explode("@", $e->getMessage());
		foreach ($errors as $error) {
			if (substr($error, 0, 1) == "1") {
				$_SESSION["errorRegisterParticipant"] = substr($error, 1);
			}
			if (substr($error, 0, 1) == "2") {
				$_SESSION["errorRegisterEvent"] = substr($error, 1);
			}
		}
	}
	
?>